<%= form_for(@user, :url => { :action => "update",:controller => 'users', } ) do |f| %>
  <h2>Edit password</h2>
  <div class="col-md-6 p-1">
    <%= f.label :password, "Password", class: "form-label" %><br />
    <%= f.password_field :password, :autocomplete => "off", class: "form-control", placeholder: "Insert your password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, class: "form-label" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Insert your password confimation" %>
  </div>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>
