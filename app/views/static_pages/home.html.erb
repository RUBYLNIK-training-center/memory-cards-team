<h1>Hello world</h1>
<% if current_user %>
  <%= current_user.email%>
  <%= link_to "Sign Out", destroy_session_path(:user), :method => :delete %>
  <div align="center">
    <%= button_to boards_path, method: 'get', class: "btn btn-success" do %>
     <span class="bi bi-bookmark-heart">Boards</span>
     <% end %>
     <br>
     <%= button_to cards_path, method: 'get', class: "btn btn-primary" do %>
     <span class="bi bi-credit-card-2-front-fill"> Cards</span>
     <% end %>
  </div>
<% else %>
  <%= link_to "Sign In", new_user_session_path %>
  <%= link_to  "Sign Up", new_user_registration_path %>
<% end %>
