<h2><%= t('.header') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-6 p-1">
    <%= f.label :email, t('global.form.email_label'), class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('global.form.email_placeholder') %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 p-1">
    <%= f.label :password, t('global.form.password_label'), class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t('global.form.password_placeholder') %>
  </div>
</div>

<% if devise_mapping.rememberable? %>
<div class="form-check">
  <%= f.check_box :remember_me, class: "form-check-input" %>
  <%= f.label :remember_me, t('.remember_me_label'), class: "form-check-label" %>
</div>
<% end %>
<div class="d-flex flex-row">
  <div class="p-1">
    <%= f.submit t('.submit'), class: "btn btn-success" %>
    <%= link_to "Sign in with Github", user_github_omniauth_authorize_path, method: :post, class: "btn btn-success" %>
  </div>
</div>
<% end %>
