<h1>Edit board</h1>
<%= form_with model: @board do |form| %>
<div class="form-group w-50">
  <%= form.label :name, class: "form-label" %><br />
  <%= form.text_field :name, placeholder: "name", class: "form-control" %>
</div>
<div class="form-group w-50">
  <%= form.label :description, class: "form-label" %><br />
  <%= form.text_field :description, placeholder: "description", class: "form-control" %>
</div>
<%= form.submit class: "btn btn-primary"%>
<% end %>
<br />
<%= link_to "Back to all boards", boards_path %>
